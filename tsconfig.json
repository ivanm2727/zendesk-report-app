{
  "compilerOptions": {
    "target": "es6",            
    "module": "commonjs",                     
    "lib": [
      "dom",
      "es5",
      "es6"
    ],                             
    "jsx": "react",             
    "sourceMap": true,                     
    "outDir": "./dist", 
    "importHelpers": true,     
    "strict": true,              
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true
  },
 "include": ["./src/**/*", "./types"]
}